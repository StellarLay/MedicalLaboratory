<Window x:Class="SessionOne.View.LaborantIssledovatel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:vm="clr-namespace:SessionOne.ViewModel"
        xmlns:local="clr-namespace:SessionOne.View"
        mc:Ignorable="d"
        Title="LaborantIssledovatel" Height="600" Width="850" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" MinWidth="850" MinHeight="600"
        d:DataContext="{d:DesignInstance {x:Type vm:ApplicationViewModel}}">
    <Grid>
        <Label x:Name="timerLabel" Margin="557,10,10,0" VerticalAlignment="Top" Content="{Binding TimerValue, UpdateSourceTrigger=PropertyChanged}"/>
        <Button x:Name="backBtn" Content="На главный экран" HorizontalAlignment="Left" Margin="22,512,0,0" VerticalAlignment="Top" Width="130" Height="35" Style="{DynamicResource ButtonStyle}" Foreground="#E5FFFFFF" Command="{Binding BackbtnCommand}" Cursor="Hand"/>
        <Label Content="Добро пожаловать Лаборант исследователь" HorizontalAlignment="Left" Margin="416,13,0,0" VerticalAlignment="Top" Width="292" Height="36"/>
        <Image Height="100" Margin="713,13,31,0" VerticalAlignment="Top" Source="laborant_2.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="laborant_2.png"/>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="fioLabel" Content="Выберите пациента:" HorizontalAlignment="Left" Margin="22,92,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
        <ComboBox HorizontalAlignment="Left" Margin="22,123,0,0" VerticalAlignment="Top" Width="400" ItemsSource="{Binding DataBase.Pacients}" DisplayMemberPath="FIO" SelectedValue="{Binding ValuePacient}" SelectedValuePath="FIO" FontSize="14"/>
        <GroupBox x:Name="AnalyzersGroup" Header="Доступные анализаторы" HorizontalAlignment="Left" Height="127" Margin="475,123,0,0" VerticalAlignment="Top" Width="338">
            <ItemsControl ItemsSource="{Binding DataBase.Analysers}" Margin="10,10,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Name}" HorizontalAlignment="Left" Width="258" Margin="0,10,0,0" GroupName="AnalysatorsGroup">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Checked">
                                    <i:InvokeCommandAction Command="{Binding DataContext.CheckAnalyserCommand,RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>
        <GroupBox Header="Доступные исследования" HorizontalAlignment="Left" Height="215" Margin="475,255,0,0" VerticalAlignment="Top" Width="338">
            <ScrollViewer Margin="0,10,0,0">
                <ItemsControl ItemsSource="{Binding DataBase.Services}" Margin="10,10,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton Content="{Binding Service}" HorizontalAlignment="Left" Width="258" Margin="0" Height="37" GroupName="ServicesGroup">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:InvokeCommandAction Command="{Binding DataContext.CheckServiceCommand,RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
        <Button x:Name="SendAnalysBtn" Content="Отправить на исследование" Margin="593,507,31,0" VerticalAlignment="Top" Height="40" FontSize="14" Foreground="#E5FFFFFF" Style="{DynamicResource ButtonStyle}" Cursor="Hand" Command="{Binding SendAnalyseCommand}"/>
        <GroupBox x:Name="ServicesSuccessGroup" Header="Невыполненные услуги" HorizontalAlignment="Left" Height="287" Margin="22,183,0,0" VerticalAlignment="Top" Width="400">
            <Grid Height="239" Margin="0,21,-2,0" VerticalAlignment="Top">
                <Label x:Name="codeServiceLabel" Content="Код услуги" HorizontalAlignment="Left" Margin="28,24,0,0" VerticalAlignment="Top"/>
                <Label x:Name="statusServiceLabel" Content="Статус" HorizontalAlignment="Left" Margin="227,24,0,0" VerticalAlignment="Top" Width="94"/>
                <ScrollViewer Margin="10,56,10,10">
                    <ItemsControl ItemsSource="{Binding DataBase.Orders}" Margin="10,10,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Services}" HorizontalAlignment="Left" Margin="0,0,100,0"/>
                                    <TextBlock Text="{Binding StatusService}" Margin="0,0,0,0" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        <ProgressBar x:Name="pgBar" HorizontalAlignment="Left" Height="22" Margin="249,517,0,0" VerticalAlignment="Top" Width="289" Foreground="#FF498C51" Value="{Binding ProgBarValue, UpdateSourceTrigger=PropertyChanged}">
            <ProgressBar.Style>
                <Style>
                    <Setter Property="ProgressBar.Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAnalyse}" Value="false">
                            <Setter Property="ProgressBar.Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ProgressBar.Style>
        </ProgressBar>
    </Grid>
    <Window.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
    </Window.Resources>
</Window>
